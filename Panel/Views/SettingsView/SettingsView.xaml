                                                            <ContextMenu x:Name="ctxMnuSchedRemdrs2">
                                                                <MenuItem Header="Group by FirstName" 
                                                              Click="GroupbyFirstNameActionParties_Click"/>
                                                                <MenuItem Header="Ungroup" 
                                                              Click="ClearFirstNameGroupingActionParties_Click"/>
                                                            </ContextMenu>
                                                        </DataGrid.ContextMenu>
                                                        <DataGrid.GroupStyle>
                                                            <GroupStyle>
                                                                <GroupStyle.HeaderTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel>
                                                                            <TextBlock Text="{Binding Path=Name}" />
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </GroupStyle.HeaderTemplate>
                                                                <GroupStyle.ContainerStyle>
                                                                    <Style TargetType="{x:Type GroupItem}">
                                                                        <Setter Property="Width" 
                                                                    Value="Auto"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                                                    <Expander IsExpanded="True" 
                                                                                  Background="#EAF9FB"
                                                                                  BorderBrush="LightGray" 
                                                                                  Foreground="Black"
                                                                                  FontSize="12" 
                                                                                  BorderThickness="1,1,1,1">
                                                                                        <Expander.Header>
                                                                                            <StackPanel Orientation="Horizontal">
                                                                                                <TextBlock FontWeight="Bold"
                                                                                               Text="{Binding Name, 
                                                                                                              Converter={StaticResource CategoryToPhrase}}"/>
                                                                                                <TextBlock FontWeight="Bold"
                                                                                               Text="{Binding ItemCount, 
                                                                                                              Converter={StaticResource ItemCountToPhrase}}"/>
                                                                                            </StackPanel>
                                                                                        </Expander.Header>
                                                                                        <Expander.Content>
                                                                                            <ItemsPresenter/>
                                                                                        </Expander.Content>
                                                                                    </Expander>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </GroupStyle.ContainerStyle>
                                                            </GroupStyle>
                                                        </DataGrid.GroupStyle>
                                                        <DataGrid.RowStyle>
                                                            <Style TargetType="DataGridRow">
                                                                <Setter Property="Foreground" 
                                                            Value="Black"/>
                                                                <Setter Property="Background" 
                                                            Value="White"/>
                                                            </Style>
                                                        </DataGrid.RowStyle>
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="S/N" 
                                                                    Binding="{Binding Id}"
                                                                    FontSize="12"
                                                                    Width="Auto"/>
                                                            <DataGridTextColumn Header="Date" 
                                                                    Binding="{Binding Date}"
                                                                    FontSize="12"
                                                                    Width="Auto"/>
                                                            <DataGridTextColumn Header="First Name" 
                                                                    Binding="{Binding FirstNameActionParty}"
                                                                    FontSize="12" 
                                                                    Width="Auto"/>
                                                            <DataGridTextColumn Header="Last Name" 
                                                                    Binding="{Binding LastNameActionParty}"
                                                                    FontSize="12" 
                                                                    Width="Auto"/>
                                                            <DataGridTextColumn Header="Email"
                                                                    Binding="{Binding EmailActionParty}"
                                                                    FontSize="12" 
                                                                    Width="Auto"/>
                                                            <DataGridTextColumn Header="Phone Number"
                                                                    Binding="{Binding PhoneNumberActionParty}"
                                                                    FontSize="12" 
                                                                    Width="Auto"/>
                                                            <DataGridTextColumn Header="Job Title"
                                                                    Binding="{Binding JobTitleActionParty}"
                                                                    FontSize="12" 
                                                                    Width="Auto"/>
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </ScrollViewer>
                                            </StackPanel>
                                        </StackPanel>
                                    </Expander>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                        </GroupBox>
                    </Expander>

                    <Expander x:Name="expdrrcSettings"
                            ExpandDirection="Right" 
                            Height="300"
                            VerticalAlignment="Center"
                            IsExpanded="False"
                            Expanded="expdrReminders_Expanded"
                            MouseDown="expdrrcSettings_MouseDown"
                            Collapsed="Reminders_Collapsed">
                        <Expander.Header>
                            <StackPanel>
                                <Image Source="/Images/Settings3.jpg" 
                                Width="150" 
                                Height="150"/>
                                <TextBox TextWrapping="Wrap"
                                    BorderBrush="Transparent"
                                    FontSize="20"
                                    Text="Reminders Configuration"
                                    FontWeight="Bold" 
                                    Width="150"
                                    HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </Expander.Header>
                        <GroupBox x:Name="grpbxRemConfig"
                            Header="Reminders Configuration"  
                            Style="{StaticResource GroupBoxStyle}"
                            Width="800" 
                            Height="860">
                            <StackPanel>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                        Margin="0,20,0,0">
                                        <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                                            <Label Content="Starts" Height="30" FontSize="14"
                                            VerticalAlignment="Top"/>
                                            <DatePicker x:Name="dtpkrStarts"  HorizontalAlignment="Left"  
					                        VerticalAlignment="Bottom" 
					                        Style="{DynamicResource DatePickerStyle}" 
					                        Width="240" Height="55" Margin="0,0,0,0"
					                        SelectedDate="{Binding SchMaintenanceStartDate, 
										                            Mode=TwoWay}"
					                        DisplayDate="{x:Static sys:DateTime.Now}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                                            <Label x:Name="lblGenSchMainGenerator" Content="Select Generator" 
                                            VerticalAlignment="Top" HorizontalAlignment="Left" 
                                            FontSize="14" Height="30"/>
                                            <ComboBox x:Name="cmbxSelectSchMain" Width="350" Height="55" 
                                                HorizontalAlignment="Left"
                                                ItemsSource="{Binding UniqueGeneratorNames}" 
                                                Foreground="Black" DisplayMemberPath="GeneratorName"
                                                SelectedValuePath="GeneratorName" FontSize="16"
                                                SelectedValue="{Binding Path=SchMaintenanceSelectedGen, 
                                                                        Mode=OneWayToSource}"
                                                SelectedIndex="0" Style="{StaticResource alignmentFontSize}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical"  VerticalAlignment="Bottom"
                                            HorizontalAlignment="Left" Margin="20,0,0,0">
                                            <Label Content="Every (hrs)" Height="30" FontSize="14" 
		                                    VerticalContentAlignment="Center"/>
                                            <TextBox x:Name="txtBxEvery" Background="#F2F2F2" 
                                                Width="120" Height="55" 
                                                HorizontalAlignment="Left" 
			                                    VerticalContentAlignment="Center"
			                                    Text="{Binding Path=SchMaintenanceReminderHours, 
							                                Mode=TwoWay, 
							                                ValidatesOnNotifyDataErrors=True, 
							                                UpdateSourceTrigger=PropertyChanged,
							                                ValidatesOnExceptions=True}"
			                            Validation.ErrorTemplate="{StaticResource ErrorTemplate}"
			                            HorizontalContentAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" 
                                                Width="780"
                                                HorizontalAlignment="Left" 
                                                Margin="20,20,0,0">
                                        <StackPanel Orientation="Vertical"  
                                                    VerticalAlignment="Top" 
			                                        HorizontalAlignment="Left" 
                                                    Width="120">
                                            <Label Content="Reminder" 
                                                   Height="30" 
                                                   FontSize="14" 
		                                           VerticalContentAlignment="Center"
		                                           HorizontalContentAlignment="Left" 
                                                   Margin="0,0,0,0"
		                                           Width="{Binding Path=Width, 
                                                                   RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                                                  AncestorLevel=1,
                                                                                                  AncestorType={x:Type StackPanel}}}"/>
                                            <ComboBox x:Name="cmbxReminderLevel" 
                                                      Height="55" 
			                                    HorizontalAlignment="Left"                                              
			                                    Foreground="Black" FontSize="14" Margin="0,0,0,0" 
                                                Width="{Binding Path=Width, 
                                                                RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                                                AncestorLevel=1,
                                                                                                AncestorType={x:Type StackPanel}}}"
			                                    ItemsSource="{Binding ReminderLevels}"
			                                    SelectedValue="{Binding SchMaintenanceSelectedReminderLevel, 
									                                    Mode=TwoWay,
									                                    Converter={StaticResource ComboBoxItemToString}}"
			                                    SelectedIndex="0" 
			                                    Style="{StaticResource alignmentFontSize}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Vertical"  
			                                VerticalAlignment="Top" HorizontalAlignment="Left"
			                                Margin="25,0,0,0" Width="250">
                                            <Label Content="Authoriser" Height="30" FontSize="14" 
		                                    VerticalContentAlignment="Center"
		                                    HorizontalContentAlignment="Left" Margin="0,0,0,0"
		                                    Width="{Binding Path=Width, 
                                                            RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                                            AncestorLevel=1,
                                                                                            AncestorType={x:Type StackPanel}}}"/>
                                            <ComboBox x:Name="cmbxAuthoriser" Height="55" 
			                                    HorizontalAlignment="Right"
			                                    ItemsSource="{Binding UniqueAuthoriserFullNames}"
			                                    Foreground="Black" Margin="0,0,0,0" FontSize="14"
                                                Width="{Binding Path=Width, 
                                                                RelativeSource={RelativeSource Mode=FindAncestor, 
                                                                                                AncestorLevel=1,
                                                                                                AncestorType={x:Type StackPanel}}}"
			                                    SelectedValue="{Binding SchMaintenanceSelectedAuthoriser, 
									                                    Mode=TwoWay,
									                                    Converter={StaticResource ComboBoxItemToString}}"
			                                    SelectedIndex="0" 
			                                    Style="{StaticResource alignmentFontSize}"/>
                                        </StackPanel>

                                        <CheckBox x:Name="chkbxIsRepetitive" VerticalAlignment="Center"
                                            Width="60" Height="30" Content="Repeat"
                                            Margin="20,30,0,0" FontSize="12"
                                            VerticalContentAlignment="Center"
                                            IsChecked="{Binding RepeatReminder}"/>

                                        <Button x:Name="btnActivateReminder" 
                                                Grid.Column="6" 
		                                        Grid.ColumnSpan="3" 
                                                Grid.Row="5"
		                                        Grid.RowSpan="2" 
                                                VerticalAlignment="Top"  
		                                        Height="55" 
                                                Width="100" 
                                                Content="Add" 
		                                        ToolTip="Add Scheduled Reminder" 
		                                        Style="{StaticResource AffirmativeButtonStyle}" 
		                                        HorizontalContentAlignment="Center" 
		                                        VerticalContentAlignment="Center" 
		                                        HorizontalAlignment="Left" 
                                                Margin="25,25,0,0"
		                                        Command="{Binding Path=AddReminderNotificationCmd}">
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource PassTextBoxTwoComboxItems}">
                                                            <Binding ElementName="txtBxEvery"/>
                                                            <Binding ElementName="cmbxReminderLevel" 
                                                                     Path="SelectedItem"/>
                                                            <Binding ElementName="cmbxAuthoriser" 
                                                                     Path="SelectedItem"/>
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                        </Button>
                                        
                                        <Button x:Name="btnDeleteInactiveReminder" 
                                                Grid.Column="6" 
		                                        Grid.ColumnSpan="3" 
                                                Grid.Row="5"
		                                        Grid.RowSpan="2" 
                                                VerticalAlignment="Top"  
		                                        Height="55" 
                                                Width="125" 
                                                Content="Delete"
		                                        ToolTip="Delete Inactive Reminders" 
		                                        Style="{StaticResource NegativeButtonStyle}" 
		                                        HorizontalContentAlignment="Center" 
		                                        VerticalContentAlignment="Center" 
		                                        HorizontalAlignment="Left" 
                                                Margin="25,25,0,0"
		                                        Command="{Binding Path=DeleteRemindersCmd}">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource PassTextBoxTwoComboxItems}">
                                                    <Binding ElementName="txtBxEvery"/>
                                                    <Binding ElementName="cmbxReminderLevel" 
                                                                     Path="SelectedItem"/>
                                                    <Binding ElementName="cmbxAuthoriser" 
                                                                     Path="SelectedItem"/>
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel x:Name="expdrScheduledReminders"
		                                  Background="#F2F2F2" 
		                                  VerticalAlignment="Bottom" 
                                          Width="750" 
                                          Margin="0,50,0,0">
                                    <TextBox Text="Generator Scheduled Reminders"
                                             FontSize="12"
                                             Width="750"/>
                                    <ScrollViewer Height="500"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  VerticalScrollBarVisibility="Auto">
                                        <DataGrid x:Name="dtgdGenRemindersConfigTable" 
					                              Style="{StaticResource DataGridStyle}"
					                              ItemsSource="{Binding ActiveGeneratorSchedules}" 
					                              ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}">
                                            <DataGrid.ContextMenu>
                                                <ContextMenu x:Name="ctxMnuRemCongig">
                                                    <MenuItem Header="Group by Generator" 
								                              Click="GroupbyGeneratorRemConfig_Click"/>
                                                    <MenuItem Header="Ungroup" 
								                              Click="ClearGeneratorGroupingRemConfig_Click"/>
                                                    <MenuItem Header="Deactivate Generator" 
								                              Click="DeactivateGeneratorRemConfig_Click"/>
                                                    <Separator/>
                                                    <MenuItem Header="Repeat Reminder"
                                                              DataContext="{Binding PlacementTarget.Tag, 
                                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}"
								                              Command="{Binding RepeatReminderCmd}"
                                                              CommandParameter="{Binding Path=SelectedItem}"/>
                                                </ContextMenu>
                                            </DataGrid.ContextMenu>
                                            <DataGrid.GroupStyle>
                                                <GroupStyle>
                                                    <GroupStyle.HeaderTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Path=Name}" />
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GroupStyle.HeaderTemplate>
                                                    <GroupStyle.ContainerStyle>
                                                        <Style TargetType="{x:Type GroupItem}">
                                                            <Setter Property="Width" Value="Auto"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                                        <Expander IsExpanded="True" Background="#EAF9FB" 
													                            BorderBrush="LightGray" 
													                            Foreground="Black"
													                            FontSize="12" BorderThickness="1,1,1,1">
                                                                            <Expander.Header>
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <TextBlock FontWeight="Bold"
																                            Text="{Binding Name, 
																				                            Converter={StaticResource CategoryToPhrase}}"/>
                                                                                    <TextBlock FontWeight="Bold"
																                            Text="{Binding ItemCount, 
																				                            Converter={StaticResource ItemCountToPhrase}}"/>
                                                                                </StackPanel>
                                                                            </Expander.Header>
                                                                            <Expander.Content>
                                                                                <ItemsPresenter/>
                                                                            </Expander.Content>
                                                                        </Expander>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </GroupStyle.ContainerStyle>
                                                </GroupStyle>
                                            </DataGrid.GroupStyle>
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="Background" Value="White"/>
                                                </Style>
                                            </DataGrid.RowStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Generator Name" 
										                        Binding="{Binding GeneratorName}" 
										                        FontSize="12" 
										                        Width="150"/>
                                                <DataGridTextColumn Header="Start Date" 
										                        Binding="{Binding Starts}" 
										                        FontSize="12" 
										                        Width="220"/>
                                                <DataGridTextColumn Header="Every (hours)" 
										                        Binding="{Binding Every}" 
										                        FontSize="12" 
										                        Width="100"/>
                                                <DataGridTextColumn Header="Reminder Level" 
										                        Binding="{Binding ReminderLevel}" 
										                        FontSize="12" 
										                        Width="Auto"/>
                                                <DataGridTextColumn Header="Authoriser" 
										                        Binding="{Binding Authoriser}" 
										                        FontSize="12" 
										                        Width="Auto"/>
                                                <DataGridTextColumn Header="IsActive" 
										                        Binding="{Binding IsActive}" 
										                        FontSize="12" 
										                        Width="Auto"/>
                                                <DataGridTextColumn Header="IsRepetitive" 
										                        Binding="{Binding IsRepetitive}" 
										                        FontSize="12" 
										                        Width="Auto"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </ScrollViewer>

                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Expander>
                </StackPanel>
            </Viewbox>
        </StackPanel>            
    </Grid>
</Page>
