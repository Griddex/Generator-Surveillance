<Window x:Class="Panel.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel"
        xmlns:cmds="clr-namespace:Panel.Commands"        
        mc:Ignorable="d"
        Title="Generator Surveillance"
        MaxWidth="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        MaxHeight="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        Width="1030"
        Height="900">
    
    <Window.Resources>
        <RoutedUICommand x:Key="InputViewCmd" Text="Input View"/>
    </Window.Resources>
    
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource InputViewCmd}"  Executed="InputViewCmd_Executed" 
                        CanExecute="InputViewCmd_CanExecute"/>
        <CommandBinding Command="{x:Static cmds:MainMenuCommands.ShowTablesView}" Executed="TablesViewCmd_Executed" 
                        CanExecute="TablesViewCmd_CanExecute"/>
        <CommandBinding Command="{x:Static cmds:MainMenuCommands.ShowInputView}" Executed="InputViewCmd_Executed" 
                        CanExecute="InputViewCmd_CanExecute"/>
        <CommandBinding Command="{x:Static cmds:MainMenuCommands.ShowChartsView}" Executed="ChartsViewCmd_Executed" 
                        CanExecute="ChartsViewCmd_CanExecute"/>
        <CommandBinding Command="{x:Static cmds:MainMenuCommands.ShowReportsView}" Executed="ReportsViewCmd_Executed" 
                        CanExecute="ReportsViewCmd_CanExecute"/>
        <CommandBinding Command="{x:Static cmds:MainMenuCommands.ShowHelpView}" Executed="HelpViewCmd_Executed" 
                        CanExecute="HelpViewCmd_CanExecute"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <ToolBar>
                <Button x:Name="btnInput" Command="{StaticResource InputViewCmd}"  Content="Input" ToolTip="Input Panel" 
                        Style="{StaticResource ToolBarTrayButtonStyle}"/>
                <Button x:Name="btnTables" Command="{x:Static cmds:MainMenuCommands.ShowTablesView}"  Content="Tables" ToolTip="View Data Tables" 
                        Style="{StaticResource ToolBarTrayButtonStyle}"/>
                <Button x:Name="btnCharts" Command="{x:Static cmds:MainMenuCommands.ShowChartsView}" Content="Charts" ToolTip="View Charts" 
                        Style="{StaticResource ToolBarTrayButtonStyle}"/>
                <Button x:Name="btnReports" Command="{x:Static cmds:MainMenuCommands.ShowReportsView}"  Content="Reports" ToolTip="Create Reports" 
                        Style="{StaticResource ToolBarTrayButtonStyle}"/>
                <Button x:Name="btnHelp" Command="{x:Static cmds:MainMenuCommands.ShowHelpView}" Content="Help" ToolTip="Help" 
                        Style="{StaticResource ToolBarTrayButtonStyle}"/>
            </ToolBar>
        </DockPanel>

        <Frame x:Name="MainViewFrame"  Grid.Row="1"  NavigationUIVisibility="Hidden">
            <Frame.CommandBindings>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.InputToUsageView}" 
                                Executed="InputToUsageView_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.UsageToInputView}" 
                                Executed="InputViewCmd_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.UsageToFuellingView}" 
                                Executed="UsageToFuellingView_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.FuellingToUsageView}" 
                                Executed="InputToUsageView_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.FuellingToMaintenanceView}" 
                                Executed="FuellingToMaintenanceView_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.MaintenanceToFuellingView}" 
                                Executed="UsageToFuellingView_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.UsageMaintToRunningHrsSchedulerView}"
                                Executed="UsageMaintToRunningHrsSchedulerView_Executed"/>
                <CommandBinding Command="{x:Static cmds:NavigationCommands.RunningHrsSchedulerToUsageMaintView}"
                                Executed="RunningHrsSchedulerToUsageMaintView_Executed"/>
            </Frame.CommandBindings>
        </Frame>     

    </Grid>
</Window>
