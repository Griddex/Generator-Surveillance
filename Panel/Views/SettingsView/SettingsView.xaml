                                                  Width="230" 
                                                  Height="55" 
                                                  HorizontalAlignment="Left"
                                                  Text="{Binding Path=PhoneNumberActionParty, 
                                                                 Mode=TwoWay, 
                                                                 ValidatesOnNotifyDataErrors=True, 
                                                                 UpdateSourceTrigger=PropertyChanged,
                                                                 ValidatesOnExceptions=True}"
