<Application x:Class="Panel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
             xmlns:sw="clr-namespace:Panel.StyleableWindow"
             xmlns:convtrs="clr-namespace:Panel.Converters"
             Startup="Application_Startup"> 
    
    <Application.Resources>
        
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <convtrs:FloatConverter x:Key="FloatToString"/>
        <convtrs:ConvertIntArrayToTwoCharStringArray 
            x:Key="IntArrayToTwoCharStringArray"/>
        <convtrs:ConvertControlToControl x:Key="ControlToControl"/>
        <convtrs:ConvertYesNoToBoolean x:Key="YesNoToBoolean"/>
        <convtrs:ConvertDateTimeToDate x:Key="DateTimeToDate"/>
        <convtrs:ConvertDateTimeToFullDate x:Key="DateTimeToFullDate"/>
        <convtrs:ConvertDateTimeToTime x:Key="DateTimeToTime"/>
        <convtrs:ConvertItemCountToPhrase x:Key="ItemCountToPhrase"/>
        <convtrs:ConvertCategoryToPhrase x:Key="CategoryToPhrase"/>
        <convtrs:ConvertComboBoxItemToString x:Key="ComboBoxItemToString"/>
        <convtrs:ConvertIntToTwoCharString x:Key="IntToTwoCharString"/>
        <convtrs:PassRadioButtonListBoxStackPanelAsCommandParameters 
            x:Key="PassRadioButtonListBoxStackPanel"/>
        <convtrs:PassCheckBoxBoolListBoxAsCommandParameters 
            x:Key="PassCheckBoxBoolListBox"/>
        <convtrs:PassListBoxAsCommandParameter x:Key="PassListBox"/>
        <convtrs:PassGroupBoxAsCommandParameter x:Key="PassGroupBox"/>
        <convtrs:ConvertTrueOrFalseToVisibility x:Key="TrueOrFalseToVisibility"/>
        <convtrs:PassTextBoxComboBoxItemAsCommandParameters 
            x:Key="PassTextBoxComboBoxItem"/>
        <convtrs:PassTextBoxTwoComboxItemsAsCommandParameters 
            x:Key="PassTextBoxTwoComboxItems"/>
        <convtrs:PassDatePickerComboBoxAsCommandParameter 
            x:Key="PassDatePickerComboBox"/>
        <convtrs:PassComboBoxesAndButtonAsCommandParameters 
            x:Key="PassComboBoxesAndButton"/>
        <convtrs:PassDtPkrTxBxTwoCmboxsAsCommandParameters 
            x:Key="PassDtPkrTxBxTwoCmboxs"/>
        <convtrs:PassStackpanelExpanderAsCommandParameters 
            x:Key="PassStackpanelExpander"/>
        <convtrs:PassPswbxExpdrExpdrStkPlVwBxAsCommandParameters 
            x:Key="PassPswbxExpdrExpdrStkPlVwBx"/>
        <convtrs:PassStackpanelAsCommandParameters 
            x:Key="PassStackpanel"/>


        <Window x:Key="windwPassword"
                Title="Generator Reminders Password" 
                Height="250" 
                Width="500">
            <StackPanel Margin="10">
                <Label>Enter Password:</Label>
                <PasswordBox x:Name="psswrdReminder"
                             MaxLength="20"/>
            </StackPanel>
        </Window>

        <PasswordBox x:Key="psswrd"/>

        <Style TargetType="{x:Type Label}" 
               x:Key="RoundLabelStyle">
            <Style.Resources>
                <Storyboard x:Key="strobingRedLight">
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                     From="1" 
                                     To="0"
                                     AutoReverse="True" 
                                     Duration="0:0:0.5" 
                                     RepeatBehavior="Forever"/>
                </Storyboard>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="Background" 
                         Value="#FF3939">
                    <Trigger.EnterActions>
                        <BeginStoryboard Name="flash" 
                                         Storyboard="{StaticResource strobingRedLight}"/>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <StopStoryboard BeginStoryboardName="flash" />
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border x:Name="_brdMain"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20,20,20,20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type GroupItem}" 
               x:Key="DataGridGroupItemStyle">
            <Setter Property="Margin" 
                    Value="0,0,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander IsExpanded="True" 
                                  Background="#FF112255" 
                                  BorderBrush="#FF002255" 
                                  Foreground="#FFEEEEEE" 
                                  BorderThickness="1,1,1,5">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="Bold" 
                                               Text="{Binding Name}"/>
                                    <TextBlock FontWeight="Bold" 
                                               Text="{Binding ItemCount}"/>
                                </StackPanel>
                            </Expander.Header>
                            <Expander.Content>
                                <ItemsPresenter/>
                            </Expander.Content>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DataGridStyle" 
               TargetType="{x:Type DataGrid}">
            <Setter Property="AutoGenerateColumns" 
                    Value="False" />
            <Setter Property="EnableRowVirtualization" 
                    Value="True" />
            <Setter Property="CanUserReorderColumns" 
                    Value="False" />
            <Setter Property="CanUserSortColumns" 
                    Value="True" />
            <Setter Property="HorizontalScrollBarVisibility" 
                    Value="Auto" />
            <Setter Property="RowDetailsVisibilityMode" 
                    Value="Collapsed" />
            <Setter Property="SelectionMode" 
                    Value="Extended" />
            <Setter Property="CanUserResizeColumns" 
                    Value="True" />            
            <Setter Property="VerticalScrollBarVisibility" 
                    Value="Auto" />
            <Setter Property="SelectionUnit" 
                    Value="FullRow" />
            <Setter Property="CanUserResizeRows" 
                    Value="True" />
            <Setter Property="CanUserAddRows" 
                    Value="False"/>
            <Setter Property="AlternatingRowBackground" 
                    Value="White" />
            <Setter Property="AlternationCount" 
                    Value="2" />
            <Setter Property="ScrollViewer.CanContentScroll" 
                    Value="False"/>
            <Setter Property="EnableColumnVirtualization" 
                    Value="True"/>
            <Setter Property="EnableRowVirtualization" 
                    Value="True"/>
            <Setter Property="VirtualizingPanel.IsVirtualizingWhenGrouping" 
                    Value="False"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" 
                    Value="Standard"/>
            <Setter Property="VirtualizingPanel.IsVirtualizing" 
                    Value="True"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" 
               TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="FontSize" 
                    Value="12"/>
        </Style>
        
        <ControlTemplate x:Key="ErrorTemplate" 
                         x:Name="ErrorTemplate">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <AdornedElementPlaceholder x:Name="adornerElement">
                        <Border BorderBrush="Red" 
                                BorderThickness="2"/>
                    </AdornedElementPlaceholder>
                    <Ellipse Width="{Binding ElementName=adornerElement, 
                                             Path=Width}" 
                             Height="{Binding ElementName=adornerElement, 
                                              Path=Width}" 
                             Fill="Red" 
                             HorizontalAlignment="Center" 
                             VerticalAlignment="Center"/>
                    <TextBlock Foreground="White" 
                               FontWeight="Heavy" 
                               FontSize="18" 
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" 
                               TextAlignment="Center"
                               ToolTip="{Binding ElementName=adornerElement, 
                                                 Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"
                               Text="!"/>
                </StackPanel>                
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" 
                                       Foreground="Red"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ControlTemplate>

        <!--Styling for Buttons on the toolbartray-->
        <Style x:Key="ToolBarTrayButtonStyle" 
               TargetType="{x:Type Button}">
            <Setter Property="FontSize" 
                    Value="18"/>
            <Setter Property="FontWeight" 
                    Value="Bold"/>
            <Setter Property="Height" 
                    Value="50"/>
            <Setter Property="Width" 
                    Value="80"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#41C7DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!--Styling for groupboxes or frames (VB speak)-->
        <Style x:Key="GroupBoxStyle" 
               TargetType="{x:Type GroupBox}">
            <Setter Property="FontSize" 
                    Value="18"/>
            <Setter Property="FontWeight" 
                    Value="Bold"/>
            <Setter Property="BorderBrush" 
                    Value="Gray"/>
        </Style>
        
        <!--Styling for the "Yes" button-->
        <Style x:Key="AffirmativeButtonStyle" 
               TargetType="{x:Type Button}">
            <Setter Property="HorizontalContentAlignment" 
                    Value="Center"/>
            <Setter Property="VerticalContentAlignment" 
                    Value="Center"/>
            <Setter Property="Background" 
                    Value="#1D8696"/>
            <Style.Triggers>
                <Trigger Property="IsPressed" 
                         Value="True">
                    <Setter Property="Button.Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" 
                                              Direction="320" 
                                              ShadowDepth="0" 
                                              BlurRadius="0" 
                                              Opacity="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>                
            </Style.Triggers>
        </Style>
        
        <!--Styling for the "NO" button-->
        <Style x:Key="NegativeButtonStyle" 
               TargetType="{x:Type Button}">
            <Setter Property="HorizontalContentAlignment" 
                    Value="Center"/>
            <Setter Property="VerticalContentAlignment" 
                    Value="Center"/>
            <Setter Property="Background" 
                    Value="#FF3939"/>
            <Style.Triggers>
                <Trigger Property="IsPressed" 
                         Value="True">
                    <Setter Property="Button.Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" 
                                              Direction="320" 
                                              ShadowDepth="0" 
                                              BlurRadius="0" 
                                              Opacity="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>        
        
        <!--Styling for Datepicker-->
        <Image x:Key="DataPickerButtonIcon" 
               Source=".\Images\XAML_DatepickerButton.JPG"/>

        <Style x:Key="defaultWPFButtonStyle" 
               TargetType="{x:Type Button}">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DatePickerStyle" 
               TargetType="{x:Type DatePicker}">
            <Setter Property="Foreground" 
                    Value="#434343"/>
            <Setter Property="IsTodayHighlighted" 
                    Value="True"/>
            <Setter Property="SelectedDateFormat" 
                    Value="Long"/>
            <Setter Property="Background" 
                    Value="Transparent"/>
            <Setter Property="Padding" 
                    Value="0"/>
            <Setter Property="BorderBrush" 
                    Value="#434343"/>
            <Setter Property="BorderThickness" 
                    Value="1"/>
            <Setter Property="HorizontalContentAlignment" 
                    Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePicker}">
                        <Border x:Name="DatePickerBorder" 
                                BorderBrush="Black" 
                                BorderThickness="1" 
                                Background="#F2F2F2" 
                                Padding="{TemplateBinding Padding}" 
                                Height="{TemplateBinding Height}">
                            
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="1" 
                                                             Storyboard.TargetProperty="Opacity" 
                                                             Storyboard.TargetName="PART_DisabledVisual"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            
                            <Grid x:Name="PART_Root" 
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                  Background="Blue" >
                                <Grid.Resources>
                                    <SolidColorBrush x:Key="DisabledBrush" 
                                                     Color="#434343"/>
                                    <ControlTemplate x:Key="DropDownButtonTemplate" 
                                                     TargetType="{x:Type Button}">
                                        <Grid>
                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroup x:Name="CommonStates">
                                                    <VisualStateGroup.Transitions>
                                                        <VisualTransition GeneratedDuration="0"/>
                                                        <VisualTransition GeneratedDuration="0:0:0.1" 
                                                                          To="MouseOver"/>
                                                        <VisualTransition GeneratedDuration="0:0:0.1" 
                                                                          To="Pressed"/>
                                                    </VisualStateGroup.Transitions>
                                                    <VisualState x:Name="Normal"/>
                                                    <VisualState x:Name="MouseOver">
                                                        <Storyboard>
                                                            <ColorAnimation Duration="0" 
                                                                            To="#434343" 
                                                                            Storyboard.TargetProperty="(Border.Background)
                                                                                                      .(SolidColorBrush.Color)" 
                                                                            Storyboard.TargetName="Background"/>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[3]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#7FFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[2]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#CCFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[1]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#F2FFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Pressed">
                                                        <Storyboard>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(SolidColorBrush.Color)" 
                                                                                          Storyboard.TargetName="Background">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#434343"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <DoubleAnimationUsingKeyFrames BeginTime="0" 
                                                                                           Duration="00:00:00.001" 
                                                                                           Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                                           Storyboard.TargetName="Highlight">
                                                                <SplineDoubleKeyFrame KeyTime="0" 
                                                                                      Value="1"/>
                                                            </DoubleAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[1]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#EAFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[2]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#C6FFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[3]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#6BFFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                            <ColorAnimationUsingKeyFrames BeginTime="0" 
                                                                                          Duration="00:00:00.001" 
                                                                                          Storyboard.TargetProperty="(Border.Background)
                                                                                                                    .(GradientBrush.GradientStops)[0]
                                                                                                                    .(GradientStop.Color)" 
                                                                                          Storyboard.TargetName="BackgroundGradient">
                                                                <SplineColorKeyFrame KeyTime="0" 
                                                                                     Value="#F4FFFFFF"/>
                                                            </ColorAnimationUsingKeyFrames>
                                                        </Storyboard>
                                                    </VisualState>
                                                    <VisualState x:Name="Disabled"/>
                                                </VisualStateGroup>
                                            </VisualStateManager.VisualStateGroups>

                                            <Grid FlowDirection="LeftToRight" 
                                                  HorizontalAlignment="Right" 
                                                  Margin="0" 
                                                  VerticalAlignment="Center">

                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Border x:Name="Highlight" 
                                                        BorderBrush="Black" 
                                                        BorderThickness="0" 
                                                        Height="55" Width="55" 
                                                        CornerRadius="0" 
                                                        Margin="0" 
                                                        Opacity="0" 
                                                        Grid.Row="0"  
                                                        Grid.Column="0"/>
